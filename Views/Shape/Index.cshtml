@model TestProject2.Views.Shape.IndexModel
@{

}



<head>
    <title>TestProject2</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    
</head>

<body style="overflow: hidden;">
    <div id="map" style="width: 100vw; height: 100vh;"></div>

    <button id="show-menu-btn" onclick="showMenu()">Добавить склад</button>
    <div id="popup">
        <div id="main-menu-container">
            <div id="menu-container">
                <button onclick="Point()">Маркер</button>
                <button onclick="Poligon()">Полигон</button>
                <button onclick="Rectangle()">Прямоугольник</button>
                <button id="openModalBtn">Сохранить</button>
                <div id="myModal" class="modal">
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p>Заполните поля:</p>
                        <input type="text" id="directorInput" placeholder="Директор">
                        <input type="text" id="addressInput" placeholder="Адрес">
                        <input type="text" id="activityInput" placeholder="Вид деятельности">
                        <button id="saveBtn" onclick="Save()">Сохранить</button>
                    </div>
                </div>
            </div>
            <button id="style-hide-btn" onclick="hideMenu()">Скрыть</button>
        </div>
    </div>
</body>
